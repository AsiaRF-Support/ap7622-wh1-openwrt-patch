@@ -0,0 +1,16 @@
+#!/bin/sh
+
+. /etc/device_info
+
+for _dev in /sys/class/ieee80211/*; do
+    [ -e "$_dev" ] || continue
+    basename "$(readlink -f "$_dev/device/driver/")" | grep 'wmac' || continue
+
+    PREFIX="${DEVICE_MANUFACTURER:-AsiaRF}"
+    SUFFIX="$(cat $_dev/macaddress | tr '[a-z]' '[A-Z]' | cut -d ':' -f 5,6 | sed 's/://g')"
+    uci set system.@system[0].hostname="$PREFIX-$SUFFIX"
+    uci commit system
+    /etc/init.d/system reload
+    break
+done
+
